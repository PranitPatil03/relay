{
  "name": "Relay-Chat",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:www": "turbo dev --filter=www",
    "dev:server": "turbo dev --filter=@relay/server",
    "dev:ws": "turbo dev --filter=ws",
    "lint": "turbo lint",
    "prepare": "husky install",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,mdx,json,html}'",
    "type-check": "tsc --noEmit",
    "test": "pnpm test",
    "start": "turbo start",
    "commitlint": "commitlint --edit",
    "db:generate": "pnpm --filter @relay/db db:generate",
    "db:push": "pnpm --filter @relay/db db:push",
    "db:migrate": "pnpm --filter @relay/db db:migrate",
    "db:migrate:deploy": "pnpm --filter @relay/db db:migrate:deploy",
    "db:studio": "pnpm --filter @relay/db db:studio",
    "db:reset": "pnpm --filter @relay/db db:reset",
    "s3:setup-cors": "node scripts/setup-s3-cors.js"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "turbo": "^2.2.3",
    "typescript": "5.5.4"
  },
  "packageManager": "pnpm@9.15.9+sha512.68046141893c66fad01c079231128e9afb89ef87e2691d69e4d40eee228988295fd4682181bae55b58418c3a253bde65a505ec7c5f9403ece5cc3cd37dcf2531",
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "packages/utils/**/*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
